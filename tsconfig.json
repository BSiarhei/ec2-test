{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "ES2017",
    "allowJs": false,
    "lib": [
      "es2016",
      "es2017.object"
    ],
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitThis": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["jest", "node"]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/tests/**/*.ts"
  ]
}
